@model Shopping.Models.CitiesViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="StateId" />
            
            <partial name="_City" />
            
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-outline-primary"/>
                <a asp-action="DetailsState" asp-route-id="@Model.StateId" class="btn btn-outline-success">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}